---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Luke Dunshea",
      url: "https://dunshea.au/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Luke Dunshea",
      logo: {
        "@type": "ImageObject",
        url: "https://dunshea.au/avatar.svg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://dunshea.au/avatar.svg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Luke Dunshea",
    url: "https://dunshea.au",
    image: "https://dunshea.au/avatar.svg",
    sameAs: [
      "https://github.com/elldeeone",
      "https://x.com/elldeeone",
      "https://linkedin.com/in/lukedunshea",
    ],
    jobTitle: "Tech Consultant",
    description:
      "Building with AI, one prompt at a time. Thoughts on codegen, crypto, and technology.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Luke Dunshea",
    url: "https://dunshea.au",
    description:
      "Building with AI, one prompt at a time. Thoughts on codegen, crypto, and technology.",
    author: {
      "@type": "Person",
      name: "Luke Dunshea",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://dunshea.au/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
